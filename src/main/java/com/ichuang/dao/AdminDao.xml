<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ichuang.dao.AdminDao">
    <!-- 添加管理员 -->
    <insert id="add" parameterType="Admin">
        insert into admin (id,name,sex,phone,photo) values (#{id},#{name},#{sex},#{phone},#{photo});
    </insert>
    <!-- 删除管理员 -->
    <delete id="delete" parameterType="String">
        delete from admin where id=#{id};
    </delete>
    <!-- 更新管理员 -->
    <update id="update" parameterType="Admin">
        update admin
        <set>
            <if test="name!=null">
                name=#{name}
            </if>
            <if test="sex!=null">
                sex=#{sex}
            </if>
            <if test="phone!=null">
                phone=#{phone}
            </if>
            <if test="photo!=null">
                photo=#{photo}
            </if>
        </set>
        where id=#{id};
    </update>
    <!-- 查询管理员根据id -->
    <select id="getById" parameterType="String" resultType="Admin">
        select * from admin where id=#{id};
    </select>
    <!-- 查询所有管理员 -->
    <select id="listAll" resultType="Admin" parameterType="Admin">
        select * from admin
        <where>
            <if test="id!=null">
                id = #{id}
            </if>
            <if test="name!=null">
                name like "%"#{name}"%"
            </if>
        </where>
        <!-- 分页查询 -->
        <if test="start!=null and rows!=null">
            limit #{start},#{rows}
        </if>
    </select>
</mapper>